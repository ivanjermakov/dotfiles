(defcfg
  input  (device-file "/dev/input/event4")
  output (uinput-sink "KMonad"
    ;; To understand the importance of the following line, see the section on
    ;; Compose-key sequences at the near-bottom of this file.
    "/run/current-system/sw/bin/sleep 1 && /run/current-system/sw/bin/setxkbmap -option compose:ralt")

  ;; Comment this is you want unhandled events not to be emitted
  fallthrough true

  ;; Set this to false to disable any command-execution in KMonad
  allow-cmd false
)

(defalias
  ssp (tap-next spc lsft)
  sen (tap-next ret rsft)
  smt (tap-next cmp (layer-toggle system))
  nav (tap-next tab (layer-toggle navigation))
  d   (tap-next d   (layer-toggle digits))
  f   (tap-next f   (layer-toggle fns))
  b   (tap-next b   (layer-toggle braces))
  r   (tap-next r   (layer-toggle symbols-right))
  u   (tap-next u   (layer-toggle symbols-left))
)

(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12  ssrq  ins  del
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft            up       
  lctl lmet lalt           spc            ralt rctl                left  down rght
)

(deflayer default
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12  ssrq  ins  del
  esc  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    @r   t    y    @u   i    o    p    [    ]    \
  @nav a    s    @d   @f   g    h    j    k    l    ;    '    ret 
  lsft z    x    c    v    @b   n    m    ,    .    /    @sen            up       
  _    _    lctl           @ssp           lalt @smt                left  down rght
)

